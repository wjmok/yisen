.user-info-item-input-select .user-info-item-input-select-item .select-item-img image{width: 36rpx;height: 36rpx;position: absolute;left: 0;top: 50%;margin-top: -18rpx;}
.user-info-item-input-select .user-info-item-input-select-item .select-item-text{font-size: 35rpx;}